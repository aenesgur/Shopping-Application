@model CartModel
@{
    ViewData["Title"] = "Index";
}

<h1>Shopping Cart</h1>


<div class="row mt-5">
    <div class="col-md-8">
        <h4>Cart Items</h4>
        @if (Model.CardItems.Count() > 0)
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th></th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CardItems)
                    {
                        <tr>
                            <td>
                                <img src="~/img/@item.ImageUrl" width="80" />
                            </td>
                            <td>@item.Name</td>
                            <td>@item.Price.ToString("c")</td>
                            <td>@item.Quantity</td>
                            <td>@((item.Quantity * item.Price).ToString("c"))</td>
                            <td>
                                <form asp-controller="Cart" asp-action="DeleteFromCart" method="post">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning"> No Product in Cart!</div>
        }

    </div>
    <div class="col-md-4">
        <div class="text-left">
            @if (Model.CardItems.Count() > 0)
            {
                <h4>Cart Summary</h4>
                <table class="table">
                    <tr>
                        <td>No Price Info</td>
                    </tr>
                    <tr>
                        <th>Cart Total</th>
                        <td>@Model.TotalPrice().ToString("c")</td>
                    </tr>
                    <tr>
                        <th>Shipping</th>
                        <td>Free</td>
                    </tr>
                    <tr>
                        <th>Order Total</th>
                        <td>@Model.TotalPrice().ToString("c")</td>
                    </tr>
                </table>
                <div class="text-center">
                    <a href="/" class="btn btn-primary">
                        <i class="fas fa-chevron-circle-left"></i> Continue Shopping
                    </a>
                    <a asp-controller="Cart" asp-action="CheckOut" class="btn btn-primary">
                        Checkout <i class="fas fa-chevron-circle-right"></i>
                    </a>
                </div>
            }

        </div>
    </div>
</div>
